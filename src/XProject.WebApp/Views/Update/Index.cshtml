
<h1>Оновлення</h1>
<hr />

<a href="#" class="btn btn-primary btn-update">Оновити</a>
<br /><br />
<div class="spinner-border text-primary status" style="display:none" role="status">
  <span class="visually-hidden">Loading...</span>
</div>

<div class="messages alert alert-info">Тут буде інформація за результатами оновлення.</div>

@section Scripts {

<script>
    $(function() {

        // jQuery
        $(".btn-update").click(function() {

            $.ajax({
                url: '/update/run',
                type: 'post',
                beforeSend: function() {
                    $(".status").fadeIn();
                },
                success: function(result) {
               
                    var msgs = "<div>";
                    for(let i = 0; i < result.length; i++) {
                        msgs += "<div>" + result[i] + "</div>";
                    }
                    msgs += "</div>";
                    $(".status").fadeOut();
             
                    $(".messages").html(msgs);
                }
            });

        });

    })
</script>
}